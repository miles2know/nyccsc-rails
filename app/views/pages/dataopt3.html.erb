          <!-- placeholder for select options -->

      </form>

      </div>

    </div>

    <div class="col-lg-offset-1 col-lg-8 col-md-offset-1 col-md-8">

      <div class="chart-container" id="results"> 
    
      </div>

    </div>

  </div>

</div>

